<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_channelnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:text="1"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_channelname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30.0dip"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="start"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="CCTV-1"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5.0dip"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/setting"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="设置"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/channellist"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="频道列表"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_srcinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:gravity="start|center"
                android:padding="5.0dip"
                android:text="源1/1"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_epginfo"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginStart="30.0dip"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_curepg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前节目："
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_epgcurrent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="精彩节目"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nextepg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下个节目："
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_epgnext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="下个节目：精彩节目"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>